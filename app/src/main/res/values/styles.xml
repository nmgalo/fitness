<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textColorHint">@color/color_gray</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_input_bg</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.FitnessComponents.Toolbar.Surface" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">?colorTextPrimary</item>
        <item name="titleTextStyle">?textAppearanceHeadline6</item>
        <item name="elevation">6dp</item>
        <item name="android:background">?colorSurfaceSecondary</item>
    </style>

</resources>